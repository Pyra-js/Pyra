{
  "name": "pyrajs-core",
  "version": "0.4.14",
  "description": "Core bundler engine for Pyra.js",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "vitest run --config vitest.config.ts",
    "build": "tsup src/index.ts --dts --format esm --out-dir dist",
    "dev": "tsup src/index.ts --dts --format esm --out-dir dist --watch",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "pyra",
    "bundler",
    "build-tool",
    "dev-server",
    "esbuild"
  ],
  "author": "Nathaniel Paz",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Simpleboi/Pyra",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/Simpleboi/Pyra#readme",
  "bugs": {
    "url": "https://github.com/Simpleboi/Pyra/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "pyrajs-shared": "workspace:*",
    "chokidar": "^5.0.0",
    "esbuild": "^0.27.3",
    "ws": "^8.18.0"
  },
  "peerDependencies": {
    "sharp": ">=0.33.0"
  },
  "peerDependenciesMeta": {
    "sharp": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/ws": "^8.5.13",
    "@types/node": "^25.3.2"
  }
}
